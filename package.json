{
  "name": "qa-test-automation-engineer-challenge",
  "version": "1.0.0",
  "description": "QA-test-automation-engineer-challenge-using-cypress",
  "main": "index.js",
  "scripts": {
    "test:chrome:mobile": "cypress run --browser chrome --env device=mobile,environment=stg",
    "test:chrome:tablet": "cypress run --browser chrome --env device=tablet,environment=stg",
    "test:chrome:desktop": "cypress run --browser chrome --env device=desktop,environment=stg",
    "test:firefox:mobile": "cypress run --browser firefox --env device=mobile,environment=stg",
    "test:firefox:tablet": "cypress run --browser firefox --env device=tablet,environment=stg",
    "test:firefox:desktop": "cypress run --browser firefox --env device=desktop,environment=stg",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome/*.json > mochawesome.json",
    "report:generate": "marge mochawesome.json -f report -o cypress/reports/mochawesome/html",
    "report": "npm run report:merge && npm run report:generate",
    "test:chrome:all": "npm run test:chrome:mobile && npm run test:chrome:tablet && npm run test:chrome:desktop && npm run report",
    "test:firefox:all": "npm run test:firefox:mobile && npm run test:firefox:tablet && npm run test:firefox:desktop && npm run report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegohrlr/drodriguez-qa-test-automation-engineer-challenge.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/diegohrlr/drodriguez-qa-test-automation-engineer-challenge/issues"
  },
  "homepage": "https://github.com/diegohrlr/drodriguez-qa-test-automation-engineer-challenge#readme",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "cypress": "^14.4.1"
  },
  "devDependencies": {
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}