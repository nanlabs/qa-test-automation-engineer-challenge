{
  "name": "qa-test-automation-challenge",
  "version": "1.0.0",
  "description": "E2E Test Automation Suite for DemoQA and AutomationExercise websites",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:demoqa": "cypress run --spec 'tests/e2e/demoqa/**/*.spec.js'",
    "test:automationexercise": "cypress run --spec 'tests/e2e/automationexercise/**/*.spec.js'",
    "test:demoqa:chrome": "cypress run --spec 'tests/e2e/demoqa/**/*.spec.js' --browser chrome",
    "test:demoqa:firefox": "cypress run --spec 'tests/e2e/demoqa/**/*.spec.js' --browser firefox",
    "test:demoqa:edge": "cypress run --spec 'tests/e2e/demoqa/**/*.spec.js' --browser edge",
    "test:automationexercise:chrome": "cypress run --spec 'tests/e2e/automationexercise/**/*.spec.js' --browser chrome",
    "test:automationexercise:firefox": "cypress run --spec 'tests/e2e/automationexercise/**/*.spec.js' --browser firefox",
    "test:automationexercise:edge": "cypress run --spec 'tests/e2e/automationexercise/**/*.spec.js' --browser edge",
    "cypress:open": "cypress open",
    "cypress:open:demoqa": "cypress open --config baseUrl=https://demoqa.com",
    "cypress:open:ae": "cypress open --config baseUrl=https://automationexercise.com",
    "lint": "eslint tests/ --ext .js,.ts",
    "lint:fix": "eslint tests/ --ext .js,.ts --fix",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "format:check": "prettier --check '**/*.{js,ts,json,md}'",
    "test:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "test:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "test:desktop": "cypress run --config viewportWidth=1920,viewportHeight=1080",
    "coverage": "nyc cypress run",
    "test:api": "cypress run --spec 'tests/e2e/**/api.spec.js'",
    "api:cypress": "cypress run --spec 'tests/e2e/**/api.spec.js'",
    "api:postman": "newman run tests/api/automationexercise-collection.json -e tests/api/environment.json",
    "api:postman:html": "newman run tests/api/automationexercise-collection.json -e tests/api/environment.json --reporters cli,html --reporter-html-export tests/reports/api-report.html",
    "api:all": "npm run api:cypress && npm run api:postman",
    "test:newman": "newman run tests/api/automationexercise-collection.json -e tests/api/environment.json --reporters json,cli --reporter-json-export newman-results.json",
    "postman:test": "newman run tests/api/automationexercise-collection.json -e tests/api/environment.json",
    "test:smoke": "cypress run --env grepTags=@smoke",
    "test:a11y": "cypress run --env grepTags=@accessibility",
    "test:performance": "cypress run --env grepTags=@performance",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:firefox": "cypress run --browser firefox",
    "test:e2e:edge": "cypress run --browser edge",
    "report:merge": "mochawesome-merge tests/reports/*.json > tests/reports/merged-report.json",
    "report:generate": "marge tests/reports/merged-report.json --reportDir tests/reports --inline",
    "report:api": "npm run api:postman:html",
    "prepare": "husky install"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "automation",
    "qa",
    "demoqa",
    "automationexercise"
  ],
  "author": "Guadalupe Gramajo",
  "license": "MIT",
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.20",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cypress": "^13.6.2",
    "cypress-axe": "^1.5.0",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-real-events": "^1.11.0",
    "eslint": "^8.56.0",
    "eslint-plugin-cypress": "^2.15.1",
    "husky": "^8.0.3",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "newman": "^6.0.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "faker": "^5.5.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
} 